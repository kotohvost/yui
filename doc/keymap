# Этот файл содержит описания всех операций редактора и соответствующих
# им клавиш. Персональный файл может находиться в каталоге $HOME/.yui/,
# общий файл -- в каталоге /usr/local/lib/yui или по пути, указанном
# в переменной окружения YUI_PATH. Символ '#' означает начало комментария,
# пустые строки игнорируются. Формат строки:
#
# <идентификатор_операции> <кнопка1> [<кнопка2> ... <кнопка10>]
#
# При этом <кнопка> может быть описана следующим образом:
# 1. a		- просто кнопка 'a'
# 2. A		- просто кнопка 'A'
# 3. ^a		- CtrlA, регистр буквы не важен
# 4. func1_a	- кнопка 'a' после модификатора 1
# 5. func2_a	- кнопка 'a' после модификатора 2
# 6. func3_a	- кнопка 'a' после модификатора 3
# 7. небуквенные клавиши (могут быть в любом регистре):
#      esc, enter, return, tab, backspace, del, ins, home, end,
#      pgup, pgdn, up, down, left, right, space,
#      f1, f2, f3, f4, f5, f6, f7, f8, f9, f10, f11, f12
# 8. func?_<небуквенная_клавиша>	- соответсвующая клавиша после
#					  соответсвующего модификатора
#
# Если в этот файл внесены изменения, то его можно перечитать не выходя
# из редактора (пункт меню Reload/Keymap), при этом все изменения
# вступят в силу.


# ------------
# модификаторы
# ------------
func1		^J		# модификатор 1
func2		^K		# модификатор 2
# модификатор func3 получается комбинацией func1_func2
national	func1_^N	# переключение на национальный алфавит

# ------------------------
# общие команды управления
# ------------------------
c_menu		esc		# запуск меню
c_help		f1		# вызов помощи по контексту
c_help_prev	func1_f1	# предыдущая помощь
c_help_index	func2_f1	# разделы помощи
c_quit		func1_^X	# выход

c_quit_error	func2_^X	# выход без сохранения статуса,
				# возвращается значение 1

c_refresh	func1_^R	# перерисовать экран

c_cancel	^C		# закрыть окно/меню; не закрывает терминал
				# при установленном в нем флаге "first",
				# кнопка идет в терминал

c_win_close	func1_^C	# закрывает любое окно
c_win_choose	func1_* func1_0	# список окон
c_win_select1 	func1_1		# активизировать окно N 1
c_win_select2 	func1_2		# активизировать окно N 2
c_win_select3 	func1_3		# активизировать окно N 3
c_win_select4 	func1_4		# активизировать окно N 4
c_win_select5 	func1_5		# активизировать окно N 5
c_win_select6 	func1_6		# активизировать окно N 6
c_win_select7 	func1_7		# активизировать окно N 7
c_win_select8 	func1_8		# активизировать окно N 8
c_win_select9 	func1_9		# активизировать окно N 9

c_win_next	^E		# активизировать следующее окно; не работает
				# в терминале при установленном флаге "first",
				# кнопка идет в терминал

c_win_prev	^W		# активизировать предыдущее окно; не работает
				# в терминале при установленном флаге "first",
				# кнопка идет в терминал

c_win_next2	func1_^E	# активизировать следующее окно
c_win_prev2	func1_^W	# активизировать предыдущее окно
c_win_size	func1_^D	# изменить размер окна
c_win_position	func1_^A	# изменить положение окна
c_win_zoom	func1_^V	# режима окна "полный экран/текущий размер"

c_open_file	F3		# открыть файл
c_open_new	func1_F3	# открыть пустое окно редактора
c_open_term	func1_F7	# открыть терминал
c_open_debug	func1_F8	# открыть отладчик
c_open_web	func1_F9	# открыть web-клиента
c_open_calc	func2_^P	# открыть калькулятор
c_ctag_prompt	func2_f6	# строка ввода C-tag

c_sys_command	^\ func1_.	# системная команда
c_sys_window	func1_\ func2_.	# системная команда в окне терминала

c_user_menu	^_ func1_F10 func1_/	# меню пользователя
c_man_page	func1_F5	# вызов "man"

# -----------------------------------
# команды в окне текстового редактора
# -----------------------------------
e_home		home		# в начало строки
e_end         	end		# в конец строки
e_pgup		pgup		# на страницу выше
e_pgdn		pgdn		# на страницу ниже
e_up		up		# на строку выше
e_down		down		# на строку ниже
e_left		left		# на позицию влево
e_right		right		# на позицию вправо
e_scroll_up	^v		# скроллинг вверх при неподвижном курсоре
e_scroll_down	^f		# скроллинг вниз при неподвижном курсоре
e_word_left	^x		# на слово влево
e_word_right	^b		# на слово вправо
e_first		func1_pgup	# в начало текста
e_last		func1_pgdn	# в конец текста

e_block_row 	f7		# маркер строчного блока
e_block_col 	f8		# маркер колоночного блока
e_block_reverse	func2_^n	# поменять местами две предыдущие команды
				# (для поклонников joe)

e_block_unmark	^p		# снять маркеры блока
e_block_copy	f9		# скопировать блок
e_block_move	f10		# переместить блок
e_block_del	func1_^y	# удалить блок
e_clip_copy_to	func1_+		# скопировать блок в буфер обмена
e_clip_copy_from func1_ins	# скопировать блок из буфера обмена
e_clip_add	func2_+		# добавить блок к буферу обмена
e_clip_move	func1_del	# переместить блок в буфер обмена
e_clip_edit	func2_^e	# редактировать буфер обмена

e_save		f2		# сохранить текст
e_save_as	func1_f2	# сохранить с новым именем
e_goto		f4		# переход на строку
e_mark_line 	func1_f4	# запомнить строку для последующего e_goto
e_man		f5		# вызов "man" на текущее слово
e_ctag_go	func2_t		# переход на C-tag
e_find		f6		# поиск
e_find_next	^l		# продолжить поиск
e_find_replace	func1_f6	# поиск с заменой
e_undo		^u		# откат
e_redo		^r		# обратный откат
e_math_down	^g		# совпадение символа вниз
e_math_up	^t		# совпадение символа вверх
e_ins_mode	ins		# режим вставка/замещение
e_del_char	del		# удалить текущий символ
e_del_line	^y		# удалить текущую строку
e_backspace	backspace	# удалить символ слева
e_truncate	^d		# усечь строку по текущую позицию курсора
e_breakpoint	func1_^b	# поставить/снять точку останова
e_space_mode	func2_^v	# видимость/невидимость пробелов/табуляций
e_input_code	func1_^l	# ввести символ по коду
e_reload	func2_^l	# перечитать текст
e_readonly_mode	func2_^r	# поставить/снять режим "только чтение"
e_man_mode	func2_^f	# поставить/снять режим "man page"
e_format_smart	^o		# умное форматирование
e_format_dumb	func2_^o	# тупое форматирование

e_enter		enter		# :-)
e_prevtab	^z		# на позицию предыдущей табуляции

# ------------------------
# команды в окне терминала
# ------------------------
t_cursor_mode	func1_tab func2_tab	# режим курсора мягкий/жесткий

t_key_mode	func1_^f func2_^f	# режим получения кнопок
					# "первый/не первый"

# блоковые операции, работают только в режиме "мягкий курсор"
t_block_row		f7		# маркер строчного блока
t_block_col		f8		# маркер строчного блока
t_block_unmark		^p		# снять маркеры блока
t_clip_copy_to		func1_+		# копировать в буфер обмена
t_clip_copy_from	func1_ins	# копировать из буфера обмена

# ----------------------------------------------------------------
# общие команды для окон "dialog" (всплывающие окна, строки ввода,
# калькулятор, ...), работают так же и в окне web-клиент
# ----------------------------------------------------------------
d_cursor_mode	func2_tab	# режим курсора мягкий/жесткий, в жестком
				# режиме перемещение курсора возможно только
				# по объектам ввода, в мягком по всему окну

d_home		home		# в мягком режиме - на начало строки
				# в жестком режиме - на первый объект ввода

d_end		end		# в мягком режиме - на конец строки
				# в жестком режиме - на последний объект ввода

d_first		func1_home	#
d_last		func1_end	#

d_top		func1_pgup	# на первую строку, только в мягком режиме
d_bottom	func1_pgdn	# на последнюю строку, только в мягком режиме

d_next		tab		# на следующий объект ввода
d_prev		func1_tab	# на предыдущий объект ввода
d_next2		func1_down func1_right
d_prev2		func1_up   func1_left
d_pgup		pgup		# на страницу выше
d_pgdn		pgdn		# на страницу ниже
d_up		up		# на строку выше
d_down		down		# ни строку ниже
d_left		left		# на позицию влево
d_right		right		# на позицию вправо
d_scroll_up	^v		# скроллинг вверх при неподвижном курсоре
d_scroll_down	^f		# скроллинг вниз при неподвижном курсоре
d_find		f6		# поиск
d_find_next	^l		# продолжить поиск
d_block_row	f7		# маркер строчного блока
d_block_col	f8		# маркер колоночного блока
d_block_unmark	^p		# снять маркеры блока
d_clip_copy_to	func1_+		# скопировать блок в буфер обмена

# ---------------------------
# команды для окна web-клиент
# ---------------------------
w_cursor_mode	func1_tab	# режим курсора мягкий/жесткий, в жестком
				# режиме перемещение курсора возможно только
				# по ссылкам, в мягком по всему окну

w_history	h H		# история url
w_main_page	m M		# на первый url
w_search	s S		# поиск, если страница поддерживает
w_source	o O		# исходный текст
w_prev		-		# предыдущая страница
w_info		/		# информация о странице
w_download	d		# скачать
w_download2	D		# скачать без вопроса
w_reload	r		# перезагрузить страницу
w_reload2	R		# перезагрузить без вопроса
w_go		g G		# новый url
w_frame_next	^a		# следующий кадр
w_frame_prev	^x		# предыдущий кадр

